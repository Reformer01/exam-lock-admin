{
  "manifest_version": 3,
  "name": "Exam Lock: Prevent Tab Switch",
  "description": "Detects if the student minimizes or switches away from the exam tab and triggers security actions.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/forms/d/*/viewform*",
        "https://forms.google.com/forms/d/*/viewform*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://docs.google.com/*",
    "https://forms.google.com/*"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "styles.css"],
      "matches": ["https://docs.google.com/*", "https://forms.google.com/*"]
    }
  ]
}